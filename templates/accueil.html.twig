
{% extends 'base.html.twig' %}

{% block title %}Accueil|Police{% endblock %}
{% block body %}
        <div class="content-wrapper">
            <div class="row">
            <br>
            <h4 style="margin-left:30%;margin-top:7%">Satistiques des données enregistrées  </h4>
           
            <div class="col-md-4 grid-margin stretch-card" style="margin-top:3%">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex align-items-center justify-content-between justify-content-md-center justify-content-xl-between flex-wrap mb-4">
                    <div>
                      <p class="mb-2 text-md-center text-lg-left">Candidats</p>
                      <h1 class="mb-0">{{ candidat }}</h1>
                    </div>
                   <i class="typcn typcn-user-add-outline menu-icon"></i>
                  </div>
                  <canvas id="expense-chart" height="80"></canvas>
                </div>
              </div>
            </div>
            <div class="col-md-4 grid-margin stretch-card" style="margin-top:3%">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex align-items-center justify-content-between justify-content-md-center justify-content-xl-between flex-wrap mb-4">
                    <div>
                      <p class="mb-2 text-md-center text-lg-left">Utilisateurs</p>
                      <h1 class="mb-0">{{ user }}</h1>
                    </div>
                    <i class="typcn typcn-chart-pie icon-xl text-secondary"></i>
                  </div>
                  <canvas id="budget-chart" height="80"></canvas>
                </div>
              </div>
            </div>
            
          </div>
       </div>
       {% endblock %}
      
      