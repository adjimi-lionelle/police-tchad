{% extends 'base.html.twig' %}

{% block title %}Liste | Utilisateurs{% endblock %}
       {% block body %}
        <div class="content-wrapper">
          <div class="row">
            
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title" style="margin-left:35%">Liste des utilisateurs</h4>
                <div class="form-group pull-right">
    <input type="text" class="search form-control" placeholder="Recherche">
</div>
<span class="counter pull-right"></span>
                  <div class="table-responsive">
                    <table class="table table-hover table-bordered results" id="dtBasicExample">
                     
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.telephone }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-success btn-rounded btn-icon">
                        <i class="typcn typcn-th-menu" style="color:white;margin-top:40px"></i>
                      </a>
                     <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-rounded btn-icon">
                        <i class="typcn typcn-edit"></i>
                      </a>
                      <a href="{{ path('app_user_delete', {'id': user.id}) }}" class="btn btn-danger btn-rounded btn-icon">
                        <i class="typcn typcn-trash"></i>
                      </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                  </div>
                </div>
              </div>
            </div>
           
           
          </div>
        </div>
        {% endblock %}